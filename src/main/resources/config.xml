<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties>
    <entry key="environment">test</entry> <!-- .xml file with such a name should be located in resources folder -->
    <entry key="runType">local</entry> <!-- choose one of: local, remote, sauceLabs, browserStack -->

    <entry key="browserType">chrome</entry> <!-- choose one of: chrome, firefox, ie, edge -->
    <entry key="parallelType">methods</entry>
    <entry key="threadCount">3</entry>

    <entry key="implicitWaitSeconds">2</entry>
    <entry key="longWaitSeconds">20</entry>
    <entry key="shortWaitSeconds">4</entry>

    <entry key="tempFolder">temp</entry>

    <entry key="logOutTimeToConsole">true</entry>
    <entry key="logOutSevereJSConsoleErrors">false</entry>

    <!-- EXTENT REPORT -->
    <entry key="extentReportFilePath">Report.html</entry>
    <entry key="testLinkFormatter">ID %s</entry>
</properties>
